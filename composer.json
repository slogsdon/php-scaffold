{
    "name": "slogsdon/scaffold",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shane Logsdon",
            "email": "shane@shanelogsdon.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Scaffold\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Scaffold\\Test\\": "test/"
        }
    },
    "require": {
        "league/route": "^3.0",
        "zendframework/zend-diactoros": "^1.6",
        "league/plates": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "squizlabs/php_codesniffer": "^3.1",
        "phpstan/phpstan": "^0.8.5"
    },
    "scripts": {
        "test": "phpunit --coverage-text",
        "test:lint": "phpcs --standard=PSR2 src test && phpstan analyze --level 7 src test",
        "cs-fix": "phpcbf --standard=PSR2 src test"
    }
}
